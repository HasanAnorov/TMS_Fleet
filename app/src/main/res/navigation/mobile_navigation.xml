        android:id="@+id/frontFragment"
        android:name="com.example.tmsfleet.ui.truck_sides.front.FrontFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_fron" />

    <fragment
        android:id="@+id/leftFragment"
        android:name="com.example.tmsfleet.ui.truck_sides.left.LeftFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_left" />
    <fragment
        android:id="@+id/trucksFragment"
        android:name="com.example.tmsfleet.ui.trucks_and_trailers.trucks_fragment.TrucksFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_trucks" />
    <fragment
        android:id="@+id/newTruckInspectionReportFragment"
        android:name="com.example.tmsfleet.ui.new_truck_inspection_report.NewTruckInspectionReportFragment"
