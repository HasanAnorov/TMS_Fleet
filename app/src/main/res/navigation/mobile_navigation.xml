<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/trucksTrailersFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.tmsfleet.ui.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_trucksTrailersFragment"
            app:destination="@id/trucksTrailersFragment" />
    </fragment>

    <fragment
        android:id="@+id/trucksTrailersFragment"
        android:name="com.example.tmsfleet.ui.trucks_and_trailers.TrucksTrailersFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_trucks_trailers" />

    <fragment
        android:id="@+id/baseInfoFragment"
        android:name="com.example.tmsfleet.ui.base_info.BaseInfoFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_base_info" />

    <fragment
        android:id="@+id/driverDetailsFragment"
        android:name="com.example.tmsfleet.ui.driver_details.DriverDetailsFragment"
        android:label="TMS Fleet"
        tools:layout="@layout/fragment_driver_details" />

    <fragment
        android:id="@+id/truckImageInfoFragment"
        android:name="com.example.tmsfleet.ui.trucks_image_info.TruckImageInfoFragment"
